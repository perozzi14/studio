
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // This rule allows any user, authenticated or not, to read and write to any document.
    // This is useful for prototyping but is not secure.
    // For production, you should implement more granular security rules.
    // Example: allow read, write: if request.auth != null;
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
